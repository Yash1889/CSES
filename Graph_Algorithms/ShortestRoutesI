#include <bits/stdc++.h>
using namespace std;
 
int main(){
    long long n,k;
    cin>>n>>k;
    vector<vector<pair<long long,long long>>> grid(n+1);
    for(long long i=0;i<k;i++){
        long long a,b,c;
        cin>>a>>b>>c;
        grid[a].push_back({b,c});
    }
    vector<long long> dist(n+1,LLONG_MAX);
    dist[1] = 0;
    priority_queue<pair<long long,long long>, vector<pair<long long,long long>>, greater<pair<long long,long long>>> pq;
    pq.push({0,1});
 
    while(!pq.empty()){
        auto [d,u] = pq.top();
        pq.pop();
        if(d>dist[u])continue;
 
        for(auto [v,w]:grid[u]){
            if(dist[v] > dist[u]+w){
                dist[v] = dist[u]+w;
                pq.push({dist[v],v});
            }
        }
    }
    for(long long i=1;i<=n;i++){
        cout<<dist[i]<<" ";
    }
}
