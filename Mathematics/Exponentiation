#include <bits/stdc++.h>
using namespace std;
 
 
long long expo(long long a, long long b, long long Mod){
    long long res = 1;
    while(b>0){
        if(b%2==1){
            res = (res*a)%Mod;
        }
        a = (a*a)%Mod;
        b /= 2;
    }
    return res;
}
 
 
int main(){
    long long n;
    cin>>n;
    while(n--){
        long long a,b;
        cin>>a>>b;
        cout<<expo(a,b,1000000007)<<'\n';
    }
}
